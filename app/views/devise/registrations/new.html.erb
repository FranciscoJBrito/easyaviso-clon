 <%= render "devise/shared/form_page" do %>
  <h2 class="text-3xl mb-8 font-semibold">Registrarse</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.email_field :email, autocomplete: "email", class: "rounded-lg py-3 w-full border-gray-200 focus:border-eb-pink focus:outline-none focus:ring-1 focus:ring-eb-pink", placeholder: "Email" %>
    </div>
    <br />
    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded-lg py-3 w-full border-gray-200 focus:border-eb-pink focus:outline-none focus:ring-1 focus:ring-eb-pink", placeholder: "Contraseña" %>
      <% if @minimum_password_length %>
        <em class="text-gray-600 font-light">(<%= @minimum_password_length %> caracteres mínimo)</em>
      <% end %><br />
    </div>
    <br />
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-lg py-3 w-full border-gray-200 focus:border-eb-pink focus:outline-none focus:ring-1 focus:ring-eb-pink", placeholder: "Confirmar contraseña" %>
    </div>
    <br />
    <%= f.submit "Registrarse", class: "bg-eb-pink w-full py-3 px-4 text-center text-white rounded-xl border-2 border-eb-pink cursor-pointer" %>
  <% end %>
  <div class="flex flex-col justify-between items-center w-full">
    <%= render "devise/shared/links" %>
  </div>
<%end%>
