<section class="flex flex-col items-center h-auto">
  <!-- Hero -->
  <div class="w-full h-[46vh] bg-[url('/house-bg.png')] bg-center bg-cover">
    <div class="flex flex-col items-center justify-center">
      <nav class="max-w-[1240px] w-full h-20 flex justify-between items-center px-6">
        <%= image_tag('logo-ea.svg', :class => "brightness-[10] w-32", :alt => "logo") %>
        <%= render "shared/menu" %>
      </nav>
      <div class="min-h-[35vh] h-auto flex flex-col justify-center mt-[-1.5rem] gap-7 items-center w-full text-center">
        <h1 class="text-5xl font-bold text-white">La manera f√°cil de encontrar tu casa</h1>
        <%= render 'shared/search' %>
      </div>
    </div>
  </div>
  <!-- Tableros o banner -->
  <section class="flex items-center justify-start max-w-[1240px] w-full py-16 px-6 bg-white">
    <% if current_user %>
      Hola, <%= current_user.email %>
    <% else %>
      <%= render "home/partials/banner" %>
    <% end %>
  </section>
</section>
